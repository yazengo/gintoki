<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">

  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>


  <actionList>

		<action>
      <name>PlayerPause</name>
      <argumentList>
         <argument>
           <retval />
           <name>Power</name>
           <relatedStateVariable>Power</relatedStateVariable>
           <direction>out</direction>
          </argument>
      </argumentList>
    </action>
    
    <action>
      <name>PlayerNext</name>
      <argumentList>
         <argument>
           <retval />
           <name>Power</name>
           <relatedStateVariable>Power</relatedStateVariable>
           <direction>out</direction>
          </argument>
      </argumentList>
    </action>
    
    <action>
      <name>PlayerVolumeup</name>
      <argumentList>
         <argument>
           <retval />
           <name>Power</name>
           <relatedStateVariable>Power</relatedStateVariable>
           <direction>out</direction>
          </argument>
      </argumentList>
    </action>
    
    <action>
      <name>PlayerVolumedown</name>
      <argumentList>
         <argument>
           <retval />
           <name>Power</name>
           <relatedStateVariable>Power</relatedStateVariable>
           <direction>out</direction>
          </argument>
      </argumentList>
    </action>
    
    <action>
      <name>PlayerGoto</name>
      <argumentList>
         <argument>
           <name>MusicID</name>
           <relatedStateVariable>MusicID</relatedStateVariable>
           <direction>in</direction>
          </argument>
      </argumentList>
    </action>
    
    <action>
      <name>PlayerPlaylist</name>
      <argumentList>
         <argument>
           <name>MusicList</name>
           <relatedStateVariable>MusicList</relatedStateVariable>
           <direction>in</direction>
          </argument>
      </argumentList>
    </action>
    
    <action>
      <name>PlayerLightSetting</name>
      <argumentList>
         <argument>
           <name>RGBVal</name>
           <relatedStateVariable>RGBVal</relatedStateVariable>
           <direction>in</direction>
          </argument>
      </argumentList>
    </action>
    
    <action>
      <name>PlayerFWdownload</name>
      <argumentList>
         <argument>
           <retval />
           <name>Power</name>
           <relatedStateVariable>Power</relatedStateVariable>
           <direction>out</direction>
          </argument>
      </argumentList>
    </action>
    
    <action>
      <name>PlayerFWpercent</name>
      <argumentList>
         <argument>
           <retval />
           <name>Power</name>
           <relatedStateVariable>Power</relatedStateVariable>
           <direction>out</direction>
          </argument>
      </argumentList>
    </action>
    
    <action>
      <name>PowerOn</name>
      <argumentList>
         <argument>
           <retval />
           <name>Power</name>
           <relatedStateVariable>Power</relatedStateVariable>
           <direction>out</direction>
          </argument>
      </argumentList>
    </action>

    <action>
      <name>PowerOff</name>    
      <argumentList>
         <argument>
           <retval />
           <name>Power</name>
           <relatedStateVariable>Power</relatedStateVariable>
           <direction>out</direction>
          </argument>
      </argumentList>
    </action>

    <action>
      <name>SetVolume</name>
      <argumentList>
        <argument>
        <name>Volume</name>
          <relatedStateVariable>Volume</relatedStateVariable>
          <direction>in</direction>
        </argument>

        <argument>
         <name>NewVolume</name>
         <retval />
         <relatedStateVariable>Volume</relatedStateVariable>
         <direction>out</direction>
         </argument>
      </argumentList>
    </action>

    <action>
      <name>IncreaseVolume</name>       
      <argumentList>

        <argument>
         <name>Volume</name>
         <retval />
         <relatedStateVariable>Volume</relatedStateVariable>
         <direction>out</direction>
         </argument>
       </argumentList>

    </action>

    <action>
      <name>DecreaseVolume</name>       
      <argumentList>

        <argument>
         <name>Volume</name>
         <retval />
         <relatedStateVariable>Volume</relatedStateVariable>
         <direction>out</direction>
         </argument>
      </argumentList>
    </action>

	<action>
      <name>PlayerVolume</name>
      <argumentList>
        <argument>
        <name>Volume</name>
          <relatedStateVariable>Volume</relatedStateVariable>
          <direction>in</direction>
        </argument>

        <argument>
         <name>Volume</name>
         <retval />
         <relatedStateVariable>Volume</relatedStateVariable>
         <direction>out</direction>
         </argument>
      </argumentList>
    </action>

	<action>
      <name>RadioControl</name>
      <argumentList>
        <argument>
        <name>Params</name>
          <relatedStateVariable>Params</relatedStateVariable>
          <direction>in</direction>
        </argument>

        <argument>
         <name>Result</name>
         <retval />
         <relatedStateVariable>Result</relatedStateVariable>
         <direction>out</direction>
         </argument>
      </argumentList>
    </action>

  </actionList>

  <serviceStateTable>
  	
  	<stateVariable sendEvents="no">
      <name>MusicID</name>
      <dataType>i4</dataType>
        <allowedValueRange>
          <minimum>1</minimum>
          <maximum>10000</maximum>
          <step>1</step>
        </allowedValueRange>
      <defaultValue>5</defaultValue>
    </stateVariable>
    
    <stateVariable sendEvents="no">
      <name>MusicList</name>
      <dataType>string</dataType>
      <defaultValue>1,</defaultValue>
    </stateVariable>
    
    <stateVariable sendEvents="no">
      <name>RGBVal</name>
      <dataType>string</dataType>
      <defaultValue>0,0,0,</defaultValue>
    </stateVariable>

    <stateVariable sendEvents="yes">
      <name>Power</name>
      <dataType>Boolean</dataType>
      <defaultValue>0</defaultValue>
    </stateVariable>

    <stateVariable sendEvents="yes">
      <name>Volume</name>
      <dataType>i4</dataType>
        <allowedValueRange>
          <minimum>0</minimum>
          <maximum>100</maximum>
          <step>1</step>
        </allowedValueRange>
      <defaultValue>5</defaultValue>
    </stateVariable>

    <stateVariable sendEvents="yes">
      <name>Params</name>
      <dataType>string</dataType>
      <defaultValue>{}</defaultValue>
    </stateVariable>

    <stateVariable sendEvents="yes">
      <name>Result</name>
      <dataType>string</dataType>
      <defaultValue>{}</defaultValue>
    </stateVariable>

  </serviceStateTable>

</scpd>
















